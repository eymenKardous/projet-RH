{% extends "base.twig" %}
{% block style %}<link rel="stylesheet" href="./css/form.css">{% endblock %}
{% block header %}
    <img src="./img/logo.png" alt="logo">
    <h1>Welc-Home</h1><hr>
    <div id="links">
    <a href="/main">Retour à l'accueil</a>
    <a href="/disconnect" id="disconnect">Se déconnecter</a>
    </div>
{% endblock %}

{% block main %}
<div class="container">
 
    <form action="/added" method="post" enctype="multipart/form-data">
        <div>
        <label for="name">Nom</label>
        <input type="text" name="name" id="name">
        
        </div>
        <div>
        <label for="firstname">Prénom</label>
        <input type="text" name="firstname" id="firstname">
        
        </div>
        <div>
        <label for="photo">Photo</label>
        <input type="file" name="photo" id="photo">
        
        </div>
        <div>
        <label for="job">Fonction</label>
        <input type="text" name="job" id="job">
        
        </div>
        <div>
        <label for="blame">Nombre de blâmes</label>
        <input type="number" name="blame" id="blame" min="0" max="3">
        
        </div>

        <div>
        <input type="submit" value="Ajouter" id="button">
        </div>

    </form>
    
 </div>
{% endblock %}
